  <script>
    function validateForm() {
        // Reset previous error messages
        document.getElementById('messageContainer').innerHTML = '';

        const productName = document.getElementById('productName').value;
        const prize = document.getElementById('prize').value;
        const stock = document.getElementById('stock').value;
        const newImage1 = document.getElementById('newImage1').value;
        const newImage2 = document.getElementById('newImage2').value;
        const newImage3 = document.getElementById('newImage3').value;

        // Minimum length is 3 characters, and should only contain alphabets
        if (productName.length < 3 || /^\s+$/.test(productName)) {
            displayErrorMessage('Product name must be at least 3 characters and should not be only spaces.');
            return false;
        }

        // Validate price
        if (prize <= 0) {
            displayErrorMessage('Price must be greater than 0.');
            return false;
        }

        // Validate stock
        if (stock < 0) {
            displayErrorMessage('Stock cannot be negative.');
            return false;
        }

        // Image validation
        const allowedExtensions = ['jpg', 'jpeg', 'png', 'gif'];
        const imageInputs = [newImage1, newImage2, newImage3];
        for (let i = 0; i < imageInputs.length; i++) {
            const file = imageInputs[i];
            if (file) {
                const extension = file.split('.').pop().toLowerCase();
                if (!allowedExtensions.includes(extension)) {
                    displayErrorMessage('Only image files (jpg, jpeg, png, gif) are allowed.');
                    return false;
                }
            }
        }

        // If all validations pass, the form will be submitted
        return true;
    }

    function displayErrorMessage(message) {
        const messageContainer = document.getElementById('messageContainer');
        messageContainer.innerHTML = `<p>${message}</p>`;
    }
</script>

